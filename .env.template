#!/usr/bin/env python3
"""
Production Environment Variables Template
Copy this to .env and fill in your actual values
"""

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=terradev
DB_USERNAME=terradev_user
DB_PASSWORD=your_secure_password_here
DB_SSL_MODE=require
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_SSL=true
REDIS_MAX_CONNECTIONS=100

# Security Configuration
SECRET_KEY=your_very_secure_secret_key_here_at_least_32_characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_ENDPOINT=
AWS_TIMEOUT=30
AWS_RETRY_ATTEMPTS=3
AWS_RETRY_DELAY=1.0

# GCP Configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_SERVICE_ACCOUNT_KEY=path/to/your/service-account-key.json
GCP_REGION=us-central1
GCP_ENDPOINT=
GCP_TIMEOUT=30
GCP_RETRY_ATTEMPTS=3
GCP_RETRY_DELAY=1.0

# Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_REGION=eastus
AZURE_ENDPOINT=
AZURE_TIMEOUT=30
AZURE_RETRY_ATTEMPTS=3
AZURE_RETRY_DELAY=1.0

# OCI Configuration
OCI_TENANCY_OCID=your_oci_tenancy_ocid
OCI_USER_OCID=your_oci_user_ocid
OCI_FINGERPRINT=your_oci_fingerprint
OCI_PRIVATE_KEY_PATH=~/.oci/oci_api_key.pem
OCI_REGION=us-ashburn-1
OCI_ENDPOINT=
OCI_TIMEOUT=30
OCI_RETRY_ATTEMPTS=3
OCI_RETRY_DELAY=1.0

# HuggingFace Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here
HF_TIMEOUT=30
HF_RETRY_ATTEMPTS=3
HF_RETRY_DELAY=1.0

# Vast.ai Configuration
VAST_API_KEY=your_vast_api_key_here
VAST_TIMEOUT=30
VAST_RETRY_ATTEMPTS=3
VAST_RETRY_DELAY=1.0

# RunPod Configuration
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_TIMEOUT=30
RUNPOD_RETRY_ATTEMPTS=3
RUNPOD_RETRY_DELAY=1.0

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/terradev/production.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_DEPLOY=5/minute
RATE_LIMIT_UPLOAD=20/minute
RATE_LIMIT_API=1000/hour

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEPALIVE_TIMEOUT=30
MAX_CONNECTIONS=100
MAX_CONNECTIONS_PER_HOST=25

# Security Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/cert.pem
SSL_KEY_PATH=/etc/ssl/key.pem
ALLOWED_HOSTS=yourdomain.com,app.yourdomain.com

# Feature Flags
ENABLE_CLOUD_ADVISOR=true
ENABLE_MULTICLOUD_DB=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_BETA_FEATURES=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Alert Configuration
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_email_password
ALERT_EMAIL_FROM=alerts@yourdomain.com
ALERT_EMAIL_TO=admin@yourdomain.com

# Slack Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#alerts

# Environment Configuration
ENVIRONMENT=production
DEBUG=false
TESTING=false

# Application Configuration
APP_NAME=Terradev
APP_VERSION=1.0.0
APP_DESCRIPTION=ML Training Optimization Platform

# External Services Configuration
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here
DATADOG_API_KEY=your_datadog_api_key_here
